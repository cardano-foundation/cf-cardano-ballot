{
  "name": "cf-cardano-ballot-discord-verification-bot",
  "version": "0.0.1",
  "type": "module",
  "description": "A Discord verification bot for linking Cardano wallets to Discord user accounts",
  "main": "bot.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "start": "node dist/bot.js",
    "dev": "concurrently -k \"tsc -w\" \"sleep 5 && nodemon dist/bot.js\""
  },
  "author": "Fabian Bormann <fabian.bormann@cardanofoundation.org>",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.5.0",
    "bunyan": "^1.8.15",
    "crypto": "^1.0.1",
    "discord.js": "^14.13.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.5.9",
    "concurrently": "^8.2.1",
    "typescript": "^5.2.2"
  }
}
